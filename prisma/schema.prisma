generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Quiz {
  id            String     @id @default(cuid())
  title         String
  description   String
  imageUrl      String?
  resultType    ResultType @default(SCORE_BASED)
  typeCodeLimit Int        @default(2)
  isFeatured    Boolean    @default(false)
  isHot         Boolean    @default(false)
  isVisible     Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  plays         Int        @default(0)
  questions     Question[]
  results       Result[]
}

model Question {
  id       String   @id @default(cuid())
  quizId   String
  content  String
  imageUrl String?
  order    Int
  options  Option[]
  quiz     Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
}

model Option {
  id             String   @id @default(cuid())
  questionId     String
  content        String
  score          Int      @default(0)
  resultTypeCode String?
  question       Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model Result {
  id          String  @id @default(cuid())
  quizId      String
  title       String
  description String
  imageUrl    String?
  minScore    Int     @default(0)
  maxScore    Int     @default(0)
  typeCode    String?
  isPremium   Boolean @default(false)
  quiz        Quiz    @relation(fields: [quizId], references: [id], onDelete: Cascade)
}

model ShortUrl {
  id          String   @id
  originalUrl String
  createdAt   DateTime @default(now())
  visits      Int      @default(0)
}


enum ResultType {
  SCORE_BASED
  TYPE_BASED
}
